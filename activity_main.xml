<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:columnCount="1" android:rowCount="4" android:background="@color/Gray" tools:ignore="HardcodedText,MissingDimension,HardcodedSize,ContentDescription">
	<androidx.camera.view.PreviewView android:id="@+id/pvCurrent" android:layout_width="match_parent" android:layout_height="250dp"
		android:layout_column="0" android:layout_row="0" app:scaleType="fitCenter" android:background="@color/Six"/>
	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="0" android:layout_row="1" style="@style/CaptionTextViewStyle" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:gravity="center_horizontal" android:text="Tap above to take a picture of the dominoes you wish to count"/>
	<androidx.recyclerview.widget.RecyclerView android:id="@+id/rvResults" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="0" android:layout_row="2" android:layout_gravity="center_horizontal"
		tools:layout_width="match_parent" tools:layout_height="200dp" tools:background="@color/RoyalBlue"/>
	<TextView android:id="@+id/txtTotal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_column="0" android:layout_row="3" style="@style/InputLabelTextViewStyle" android:layout_gravity="center_horizontal|top" android:textSize="54dp" android:includeFontPadding="false" android:textStyle="bold" tools:text="Total: 25"/>
</GridLayout>
